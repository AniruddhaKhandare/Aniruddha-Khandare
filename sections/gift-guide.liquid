<!-- Gift Guide Section -->
<section class="gift-guide-section" style="background-color: {{ section.settings.background_color }}; padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;">
  <div class="gift-guide-container">
    
    <!-- Header Section -->
    <div class="gift-guide-header">
      {% if section.settings.brand_name != blank %}
        <div class="brand-name">{{ section.settings.brand_name }}</div>
      {% endif %}
      
      {% if section.settings.tagline != blank %}
        <div class="tagline">{{ section.settings.tagline }}</div>
      {% endif %}
      
      {% if section.settings.cta_button_text != blank %}
        <a href="{{ section.settings.cta_button_url }}" class="cta-button">
          {{ section.settings.cta_button_text }}
        </a>
      {% endif %}
    </div>

    <!-- Main Content Area -->
    <div class="gift-guide-content">
      
      <!-- Left Content -->
      <div class="gift-guide-text">
        {% if section.settings.main_title != blank %}
          <h2 class="main-title">{{ section.settings.main_title }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="description">{{ section.settings.description }}</p>
        {% endif %}
        
        {% if section.settings.shop_button_text != blank %}
          <a href="{{ section.settings.shop_button_url }}" class="shop-button">
            {{ section.settings.shop_button_text }}
          </a>
        {% endif %}
      </div>

      <!-- Right Illustration Area -->
      <div class="gift-guide-illustration">
        <!-- SVG Illustration will go here -->
        <div class="illustration-container">
          {% if section.settings.illustration_image != blank %}
            <img src="{{ section.settings.illustration_image | image_url: width: 800 }}" alt="Gift Guide Illustration" width="800" height="600" loading="lazy">
          {% else %}
            <!-- Default SVG illustration -->
            <svg width="800" height="600" viewBox="0 0 800 600" class="default-illustration">
              <!-- Travel/Adventure themed items -->
              
              <!-- Camera -->
              <rect x="100" y="150" width="180" height="120" fill="none" stroke="#000" stroke-width="2" rx="5"/>
              <circle cx="150" cy="210" r="25" fill="none" stroke="#000" stroke-width="2"/>
              <circle cx="220" cy="210" r="15" fill="none" stroke="#000" stroke-width="2"/>
              <rect x="240" y="190" width="20" height="40" fill="none" stroke="#000" stroke-width="2"/>
              <path d="M80 180 Q70 150 90 140 Q120 130 140 150" fill="none" stroke="#000" stroke-width="2" stroke-dasharray="3,3"/>
              
              <!-- Compass -->
              <circle cx="450" cy="200" r="40" fill="none" stroke="#000" stroke-width="2"/>
              <path d="M450 170 L460 200 L450 230 L440 200 Z" fill="none" stroke="#000" stroke-width="2"/>
              <text x="445" y="175" font-family="Arial" font-size="12">N</text>
              
              <!-- Books -->
              <rect x="520" y="180" width="15" height="80" fill="none" stroke="#000" stroke-width="2"/>
              <rect x="540" y="170" width="15" height="90" fill="none" stroke="#000" stroke-width="2"/>
              <rect x="560" y="185" width="15" height="75" fill="none" stroke="#000" stroke-width="2"/>
              
              <!-- Sunglasses -->
              <path d="M50 100 Q70 90 90 100" fill="none" stroke="#000" stroke-width="3"/>
              <circle cx="70" cy="110" r="20" fill="none" stroke="#000" stroke-width="2"/>
              <circle cx="120" cy="110" r="20" fill="none" stroke="#000" stroke-width="2"/>
              <line x1="90" y1="110" x2="100" y2="110" stroke="#000" stroke-width="2"/>
              
              <!-- Watch -->
              <circle cx="450" cy="400" r="30" fill="none" stroke="#000" stroke-width="2"/>
              <line x1="450" y1="385" x2="450" y2="400" stroke="#000" stroke-width="2"/>
              <line x1="450" y1="400" x2="460" y2="410" stroke="#000" stroke-width="2"/>
              <rect x="420" y="395" width="60" height="10" fill="none" stroke="#000" stroke-width="2" rx="5"/>
              
              <!-- Backpack -->
              <path d="M600 300 Q580 280 580 320 L580 400 Q580 420 600 420 L650 420 Q670 420 670 400 L670 320 Q670 280 650 300 Z" fill="none" stroke="#000" stroke-width="2"/>
              <rect x="610" y="310" width="30" height="20" fill="none" stroke="#000" stroke-width="2" rx="3"/>
              <circle cx="590" cy="340" r="5" fill="none" stroke="#000" stroke-width="2"/>
              <circle cx="660" cy="340" r="5" fill="none" stroke="#000" stroke-width="2"/>
              
              <!-- Pens/Pencils -->
              <line x1="520" y1="320" x2="520" y2="380" stroke="#000" stroke-width="4"/>
              <line x1="530" y1="315" x2="530" y2="375" stroke="#000" stroke-width="4"/>
              <line x1="540" y1="325" x2="540" y2="385" stroke="#000" stroke-width="4"/>
              
              <!-- Rope/Cord -->
              <path d="M350 450 Q370 470 390 450 Q410 430 430 450 Q450 470 470 450" fill="none" stroke="#000" stroke-width="3"/>
              
              <!-- Map elements -->
              <path d="M120 350 Q140 330 160 350 Q180 370 200 350 Q220 330 240 350" fill="none" stroke="#000" stroke-width="2" stroke-dasharray="2,2"/>
              <path d="M100 370 Q150 350 200 370" fill="none" stroke="#000" stroke-width="2" stroke-dasharray="2,2"/>
              
              <!-- Camera lenses -->
              <circle cx="700" cy="120" r="25" fill="none" stroke="#000" stroke-width="2"/>
              <circle cx="700" cy="180" r="20" fill="none" stroke="#000" stroke-width="2"/>
              <circle cx="700" cy="230" r="15" fill="none" stroke="#000" stroke-width="2"/>
              
              <!-- Additional decorative elements -->
              <rect x="650" y="450" width="80" height="15" fill="none" stroke="#000" stroke-width="2" rx="7"/>
              <rect x="650" y="470" width="80" height="15" fill="none" stroke="#000" stroke-width="2" rx="7"/>
              <rect x="650" y="490" width="80" height="15" fill="none" stroke="#000" stroke-width="2" rx="7"/>
            </svg>
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Bottom tagline -->
    {% if section.settings.bottom_tagline != blank %}
      <div class="bottom-tagline">
        {{ section.settings.bottom_tagline }}
      </div>
    {% endif %}
    
  </div>
</section>

<style>
  .gift-guide-section {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    min-height: 500px;
  }

  .gift-guide-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .gift-guide-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .brand-name {
    font-size: 28px;
    font-weight: bold;
    color: #000;
    border: 3px solid #ff0000;
    padding: 8px 16px;
    display: inline-block;
  }

  .tagline {
    font-size: 16px;
    color: #000;
    border: 2px solid #ff0000;
    padding: 8px 16px;
    max-width: 300px;
    text-align: center;
  }

  .cta-button {
    background: #ffeb3b;
    color: #000;
    padding: 12px 24px;
    text-decoration: none;
    font-weight: bold;
    border: 2px solid #000;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .cta-button:hover {
    background: #ffd600;
  }

  .cta-button::after {
    content: '→';
    font-size: 18px;
  }

  .gift-guide-content {
    display: flex;
    align-items: center;
    gap: 60px;
    flex-wrap: wrap;
  }

  .gift-guide-text {
    flex: 1;
    min-width: 300px;
  }

  .main-title {
    font-size: 48px;
    font-weight: bold;
    color: #000;
    margin: 0 0 20px 0;
    border: 3px solid #ff0000;
    padding: 16px;
    display: inline-block;
  }

  .description {
    font-size: 16px;
    line-height: 1.6;
    color: #000;
    margin: 20px 0 30px 0;
    border: 2px solid #ff0000;
    padding: 16px;
    max-width: 400px;
  }

  .shop-button {
    background: #000;
    color: #fff;
    padding: 15px 30px;
    text-decoration: none;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .shop-button:hover {
    background: #333;
  }

  .shop-button::after {
    content: '→';
    font-size: 18px;
  }

  .gift-guide-illustration {
    flex: 1;
    min-width: 400px;
    display: flex;
    justify-content: center;
  }

  .illustration-container {
    width: 100%;
    max-width: 500px;
  }

  .illustration-container img,
  .default-illustration {
    width: 100%;
    height: auto;
  }

  .bottom-tagline {
    text-align: center;
    margin-top: 40px;
    font-size: 14px;
    font-weight: bold;
    color: #000;
    border: 2px solid #ff0000;
    padding: 8px 16px;
    display: inline-block;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
  }

  @media (max-width: 768px) {
    .gift-guide-header {
      flex-direction: column;
      gap: 20px;
      align-items: center;
      text-align: center;
    }

    .gift-guide-content {
      flex-direction: column;
      text-align: center;
    }

    .main-title {
      font-size: 36px;
    }

    .brand-name {
      font-size: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Gift Guide",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    },
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "CTA Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "cta_button_url",
      "label": "CTA Button URL"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "shop_button_text",
      "label": "Shop Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "shop_button_url",
      "label": "Shop Button URL"
    },
    {
      "type": "image_picker",
      "id": "illustration_image",
      "label": "Custom Illustration Image (Optional)"
    },
    {
      "type": "text",
      "id": "bottom_tagline",
      "label": "Bottom Tagline",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide"
    }
  ]
}
{% endschema %}